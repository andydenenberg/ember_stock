<div class="control-group">
  <label class="control-label" for="firstName">First name</label>
  <div class="controls">
    {{view Ember.TextField valueBinding="firstName" id="firstName" placeholder="First name" required="true"}}
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="lastName">Last name</label>
  <div class="controls">
    {{view Ember.TextField valueBinding="lastName" id="lastName" placeholder="Last name" required="true"}}
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="email">Email</label>
  <div class="controls">
    {{view Ember.TextField valueBinding="email" id="email" type="email" placeholder="Email address"}}
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="notes">Notes</label>
  <div class="controls">
    {{view Ember.TextArea valueBinding="notes" id="notes" placeholder="Notes"}}
  </div>
</div>

<div class="control-group">
  <label class="control-label" for="phone">Phone</label>
  <div class="controls">
    {{#each phoneNumbers}}
      <div class="phone-number">
        {{view Ember.TextField valueBinding="number" placeholder="Number"}}
        <a class="btn btn-mini" {{action removePhoneNumber this}}><i class="icon-minus-sign"></i> Remove</a>
      </div>
    {{/each}}
    <a class="btn btn-mini" {{action addPhoneNumber}}><i class="icon-plus-sign"></i> Add a phone number</a>
  </div>
</div>

<div class="control-group">
  <label class="control-label">Stocks</label><br>
  <div class="controls">
  {{#each stocks}}
    <div class="phone-number">
      Symbol: {{view Ember.TextField valueBinding="symbol" placeholder="Symbol"}}
      Shares: {{view Ember.TextField valueBinding="quantity" placeholder="Quantity"}}
      Purchase Price: {{view Ember.TextField valueBinding="purchase_price" placeholder="Purchase Price"}}

      <a class="btn btn-mini" {{action removeStock this}}><i class="icon-minus-sign"></i> Remove</a>
    </div>
  {{/each}}
  <a class="btn btn-mini" {{action addStock}}><i class="icon-plus-sign"></i> Add a Stock</a>
  </div>
</div>
